doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Elice
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/stylesheets/style.css")
    body 
        header 
            h1 Elice
        main
            div#welcome
                form#name
                    input(placeholder="Nickname", required, type="text")
                    button Enter
                form#roomname
                    input(placeholder="room name", required, type="text")
                    button Enter
            div#call
                div#myStream
                    div#my
                        video#myFace(autoplay, playsinline, width="300", height="300")

                    div#peer
                        video#peerFace(autoplay, playsinline, width="300", height="300")
                    div#chat
                        h3 Chat
                        div#chatbox
                        form#msg
                            input(placeholder="Typing Message", required, type="text")
                            button Send
                    div#buttons
                        button#mute Mic
                        button#camera Cam
                    select#cameras
                         
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")